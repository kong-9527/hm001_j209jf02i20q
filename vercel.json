{
  "version": 2,
  "builds": [
    { 
      "src": "server/src/index.ts", 
      "use": "@vercel/node" 
    },
    { 
      "src": "client/package.json", 
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/api/auth/(.*)", "dest": "server/dist/index.js" },
    { "src": "/api/(.*)", "dest": "server/dist/index.js" },
    { "src": "/(.*)", "dest": "client/$1" }
  ],
  "regions": ["sfo1"]
}